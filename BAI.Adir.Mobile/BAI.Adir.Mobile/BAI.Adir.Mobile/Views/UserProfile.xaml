<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BAI.Adir.Mobile.Views.UserProfile">
    <StackLayout>
        <Image x:Name="ProfilePicture" HeightRequest="200" Source="https://i.ibb.co/V9kq2df/userprofile.jpg"/>
    <StackLayout Padding="10,0,10,0">
        
        <Label x:Name="LabelFullName" Text="Full Name" HorizontalOptions="CenterAndExpand" FontSize="Medium" FontAttributes="Bold"/>
        <Label/>
        <BoxView HeightRequest="1" BackgroundColor="Black" HorizontalOptions="FillAndExpand" />
        <Label/>

        <Label x:Name="LabelEmailAddress" Text="Email Address" HorizontalOptions="CenterAndExpand" FontSize="Small"/>
            
        </StackLayout>
        <StackLayout VerticalOptions="EndAndExpand">
            <Button x:Name="ButtonChangePassword" Text="Change Password" Clicked="ButtonChangePassword_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>