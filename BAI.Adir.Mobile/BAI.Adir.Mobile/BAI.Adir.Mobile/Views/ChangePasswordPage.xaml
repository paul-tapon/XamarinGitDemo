<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BAI.Adir.Mobile.Views.ChangePasswordPage">
    <ContentPage.Content>
        <ScrollView>
            
            <StackLayout>
                <Image Source="https://i.ibb.co/zP8qgZP/Love-Animals-01.png" HeightRequest="150"/>
                <StackLayout Padding="10,10,10,10">
                    <Entry x:Name="TextOldPassword" Placeholder="Old Password" IsPassword="True"/>
                    <Entry x:Name="TextNewPassword" Placeholder="New Password" IsPassword="True" />
                    <Entry x:Name="TextRepeatPassword" Placeholder="Re-Enter Password" IsPassword="True" />
                    <Button x:Name="ButtonSaveChanges"  Text="Save Changes" Clicked="ButtonSaveChanges_Clicked"/>
                    <Button x:Name="ButtonCancel"  Text="Cancel" Clicked="ButtonCancel_Clicked"/>
                </StackLayout>
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>